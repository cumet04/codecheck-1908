<article>
  <section class="project_info container">
    <div class="row">
      <div class="thumb col-md-3">
        <%= link_to image_tag(thumb_path(project.thumb_id)),
                  project_path(project) %>
      </div>
      <div class="text_info col-md-9">
        <h1 class="page-header"> <%= project.title %> </h1>
        <%= link_to project.url, project.url, class: "url" %>
        <%= text_area_tag nil, project.description, :readonly => true,
                :size => "60x5" %>
      </div>
    </div>
  </section>
</article>
