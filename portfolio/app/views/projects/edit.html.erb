<h1>edit project</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@project) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
      <br>

      <%= f.label :url %>
      <%= f.url_field :url, class: 'form-control' %>
      <br>

      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>
      <br>

      <% # f.label :thumb %>
      <% # f.file_field :thumb, accept: "image/jpeg" %>
      <br>

      <%= f.submit "Update the project", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
